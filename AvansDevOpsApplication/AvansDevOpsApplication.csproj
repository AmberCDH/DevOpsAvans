<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="QuestPDF" Version="2023.12.6" />
  </ItemGroup>
  <ItemGroup>
	<SonarQubeSetting Include="sonar.coverage.exclusions">
	  <Value>**/Program.cs, **/Domain/Composite/ForumComponent.cs, **/Domain/Models/CompletedBacklogItem.cs, **/Domain/BurndownChart.cs</Value>
	</SonarQubeSetting>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Domain\ItemState\" />
    <Folder Include="Domain\ActivityState\" />
    <Folder Include="Domain\SprintState\ReviewSprint\" />
    <Folder Include="Domain\SprintState\ReleaseSprint\" />
  </ItemGroup>
</Project>
